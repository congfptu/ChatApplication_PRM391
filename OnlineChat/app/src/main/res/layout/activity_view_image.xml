<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".activities.ViewImageActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBack"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/white"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageMessage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconZoomIn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="20dp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_zoom_in"
        android:tint="@color/white"
        android:background="@drawable/button_background"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/imageMessage" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconZoomOut"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"

        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_zoom_out"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/iconZoomIn"
        android:background="@drawable/button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toEndOf="@id/iconZoomIn"
        app:layout_constraintTop_toTopOf="@id/iconZoomIn"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>